<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fb"
        android:background="@color/bg_btn_login_unpressed"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height_fb"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/padding_lager"
            android:layout_marginRight="@dimen/padding_lager"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:hint="@string/search"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@null"
            android:textSize="@dimen/text_size_search"
            android:textStyle="bold"
            android:id="@+id/edit_Search" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height_fb"
            android:src="@drawable/ic_search_white_24dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginRight="@dimen/padding_lager"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
