<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@color/background_card"
            android:elevation="@dimen/card_elevation"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_fb"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_linear">

                <ImageButton
                    android:id="@+id/btn_Alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_height_fb"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_alarm" />

                <TextView
                    android:id="@+id/txt_AllDay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/padding"
                    android:text="@string/all_day"
                    android:textSize="@dimen/text_size_search" />

                <Switch
                    android:id="@+id/sw_SwitchAlarm"
                    android:layout_width="@dimen/layout_width_imgbt"
                    android:layout_height="@dimen/layout_height_fb"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/white"
                    android:theme="@style/Theme.SWitch" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_fb"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/margin_top"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/layout_width_imgbt_item_search"
                    android:text="@string/start"
                    android:textSize="@dimen/text_size_search" />

                <TextView
                    android:id="@+id/txt_DateStart"
                    android:layout_width="@dimen/layout_width_textview"
                    android:layout_height="@dimen/layout_height_fb"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/date" />

                <TextView
                    android:id="@+id/txt_timeStart"
                    android:layout_width="@dimen/layout_width_imgbt_item_search"
                    android:layout_height="@dimen/layout_height_fb"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/padding"
                    android:text="@string/time_start"
                    android:textSize="@dimen/text_size_search" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_fb"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_dateFinish"
                    android:layout_width="@dimen/margin_top"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/margin_top_button"
                    android:text="@string/finish"
                    android:textSize="@dimen/text_size_search" />

                <TextView
                    android:id="@+id/txt_DateFinish"
                    android:layout_width="@dimen/layout_width_textview"
                    android:layout_height="@dimen/layout_height_fb"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/date" />

                <TextView
                    android:id="@+id/txt_TimeFinish"
                    android:layout_width="@dimen/margin_top_button"
                    android:layout_height="@dimen/layout_height_fb"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/padding"
                    android:text="@string/time_finish"
                    android:textSize="@dimen/text_size_search" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:background="@color/background_card"
            android:elevation="@dimen/card_elevation"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/icon_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_event_black_24dp" />

            <TextView
                android:id="@+id/title_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon_event"
                android:layout_alignTop="@+id/icon_event"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/icon_event"
                android:gravity="center_vertical"
                android:text="@string/event_string" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:background="@color/background_card"
            android:elevation="@dimen/card_elevation"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/icon_loop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_loop_black_24dp" />

            <TextView
                android:id="@+id/title_loop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon_loop"
                android:layout_alignTop="@+id/icon_loop"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/icon_loop"
                android:gravity="center_vertical"
                android:text="@string/loop_string" />

            <TextView
                android:id="@+id/time_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title_loop"
                android:layout_below="@+id/title_loop"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@color/background_card"
            android:elevation="@dimen/card_elevation"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/icon_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_description_black_24dp" />

            <TextView
                android:id="@+id/title_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon_description"
                android:layout_alignTop="@+id/icon_description"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/icon_description"
                android:gravity="center_vertical"
                android:text="@string/description_string" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
