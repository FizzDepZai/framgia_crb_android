<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/bg_btn_login_pressed"
                android:endColor="@color/bg_btn_login_pressed"/>
            <corners
                android:radius="@dimen/radius_button_loggin"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="@color/bg_btn_login_unpressed"
                android:endColor="@color/bg_btn_login_unpressed"/>
            <corners
                android:radius="@dimen/radius_button_loggin"/>
        </shape>
    </item>
</selector>
